task.wait(0.55)
IntroGui:Destroy()

-- [[ 3. GLOBALS & SYSTEMS ]]
local BALL_FOLDER = workspace:WaitForChild("Game"):WaitForChild("Balls")
local GK_PARTS = {"Right Arm", "Left Arm"}
local PartConnections = {}
_G.PartDistances = { ["Left Leg"] = 0, ["Right Leg"] = 0, ["Torso"] = 0, ["Head"] = 0, ["GK"] = 0 }

-- REACH ENGINE
local function HandlePartReach(PartName, Distance)
    if PartConnections[PartName] then PartConnections[PartName]:Disconnect() end
    if Distance <= 0 then PartConnections[PartName] = nil return end
    _G.PartDistances[PartName] = Distance
    PartConnections[PartName] = RunService.RenderStepped:Connect(function()
        local char = LocalPlayer.Character
        local root = char and char:FindFirstChild("HumanoidRootPart")
        if not root then return end
        for _, ball in ipairs(BALL_FOLDER:GetChildren()) do
            if ball:IsA("BasePart") then
                local mag = (root.Position - ball.Position).Magnitude
                if mag <= _G.PartDistances[PartName] then
                    local targetParts = (PartName == "GK") and GK_PARTS or {PartName}
                    for _, pName in ipairs(targetParts) do
                        local p = char:FindFirstChild(pName)
                        if p then firetouchinterest(p, ball, 0) firetouchinterest(p, ball, 1) end
                    end
                end
            end
        end
    end)
end

-- OCEA REACT ENGINE (ONE-WAY ACTIVATION)
local ReactActivated = false
local ReactDist = 5

task.spawn(function()
    while task.wait() do
        if ReactActivated then
            local char = LocalPlayer.Character
            if char and char:FindFirstChild("HumanoidRootPart") then
                for _, ball in ipairs(BALL_FOLDER:GetChildren()) do
                    if ball:IsA("BasePart") or ball:IsA("MeshPart") then
                        if (char.HumanoidRootPart.Position - ball.Position).Magnitude <= ReactDist then
                            if ball:FindFirstChild("ReactOwner") then ball.ReactOwner.Value = LocalPlayer.Name end
                            if ball:FindFirstChild("Ownership") then ball.Ownership.Value = LocalPlayer.Name end
                            if ball:FindFirstChild("pbOwner") then ball.pbOwner.Value = LocalPlayer end
                            if ball:FindFirstChild("ReactDecline") then ball.ReactDecline.Value = false end
                        end
                    end
                end
            end
        end
    end
end)

-- MS Engine
local FakePingActive = false
local MinPing, MaxPing = 145, 160
local vPing = LocalPlayer:WaitForChild("vPing")
vPing.Changed:Connect(function(val)
    if FakePingActive then
        local currentNum = tonumber(val)
        if currentNum and (currentNum < MinPing or currentNum > MaxPing) then
            vPing.Value = tostring(math.random(MinPing, MaxPing))
        end
    end
end)

-- [[ 4. MAIN UI SETUP ]]
local MacLib = loadstring(game:HttpGet("https://github.com/biggaboy212/Maclib/releases/latest/download/maclib.txt"))()
local Window = MacLib:Window({
    Title = "OceaHub", Subtitle = "FTP: Hub Edition",
    Size = UDim2.fromOffset(850, 600), Keybind = Enum.KeyCode.RightControl, 
    AcrylicBlur = true, ShowUserInfo = true,
})

local tabGroup = Window:TabGroup()
local tabs = {
    FireTouch = tabGroup:Tab({ Name = "FireTouch", Image = "rbxassetid://18821914323" }),
    React     = tabGroup:Tab({ Name = "Ocea React", Image = "rbxassetid://18821914323" }),
    MS        = tabGroup:Tab({ Name = "MS", Image = "rbxassetid://11419717444" }),
    Settings  = tabGroup:Tab({ Name = "Settings", Image = "rbxassetid://10734950309" }),
}

-- MS SECTION
local MSLeft = tabs.MS:Section({ Side = "Left" })
local MSRight = tabs.MS:Section({ Side = "Right" })
MSLeft:Header({ Name = "Fake Ping Settings" })
MSLeft:Toggle({ Name = "Enable Fake Ping", Default = false, Callback = function(Value) FakePingActive = Value end })
MSLeft:Slider({ Name = "Min Ping", Default = 145, Minimum = 0, Maximum = 1000, Callback = function(Value) MinPing = Value end })
MSLeft:Slider({ Name = "Max Ping", Default = 160, Minimum = 0, Maximum = 1000, Callback = function(Value) MaxPing = Value end })

MSRight:Header({ Name = "MS Boost (Clumsy)" })
MSRight:Input({
    Name = "MS Increase Value", Placeholder = "Example: 0.1", AcceptedCharacters = "NumbersAndDecimal",
    Callback = function(Value)
        local num = tonumber(Value)
        if num then settings().Network.IncomingReplicationLag = num
            Window:Notify({ Title = "MS Boost", Description = "Ping delay set to: " .. tostring(num * 1000) .. "ms", Lifetime = 3 })
        end
    end
})

-- REACT SECTION (BUTTON EDITION)
local ReactSection = tabs.React:Section({ Side = "Left" })
ReactSection:Header({ Name = "Ball Possession (Permanent)" })
ReactSection:Button({
    Name = "ACTIVATE OCEA REACT",
    Callback = function()
        ReactActivated = true
        Window:Notify({ Title = "Ocea React", Description = "Possession System Permanently Active!", Lifetime = 5 })
    end
})
ReactSection:Slider({
    Name = "React Distance", Default = 5, Minimum = 1, Maximum = 15,
    Callback = function(Value) ReactDist = Value end
})

-- FIRETOUCH SECTION
local FireTouchLeft = tabs.FireTouch:Section({ Side = "Left" })
FireTouchLeft:Header({ Name = "Reach Settings" })
local function CreateReachSlider(partName)
    FireTouchLeft:Slider({
        Name = partName .. " Studs", Default = 0, Minimum = 0, Maximum = 30, Precision = 1,
        Callback = function(Value) HandlePartReach(partName, math.floor(Value * 10) / 10) end
    })
end
CreateReachSlider("Left Leg")
CreateReachSlider("Right Leg")
CreateReachSlider("Torso")
CreateReachSlider("Head")
CreateReachSlider("GK")

MacLib:SetFolder("OceaHub")
tabs.Settings:InsertConfigSection("Left")
tabs.FireTouch:Select()
